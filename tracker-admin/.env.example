# Environment Configuration - Copy to .env.local for development or set in Docker/deployment

# Public API URLs (visible to frontend)
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_API_BASE=http://localhost:3000
NEXT_PUBLIC_POSTER_BASE=http://localhost:4000

# Backend API Base (server-side only)
NEXT_BACKEND_API_BASE=http://backend-api:8080

# Admin Credentials for login
ADMIN_USER=admin
ADMIN_PASS=password

# JWT Configuration
JWT_SECRET=your-secret-key-here-min-32-chars
JWT_EXP_SECONDS=43200

# Node Environment
NODE_ENV=development
